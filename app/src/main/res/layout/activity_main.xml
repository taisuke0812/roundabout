<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="370dp"
            android:layout_height="495dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <TextView
                android:text="直進率"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_straight"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/edit_straight"/>
        <TextView
                android:text="右折率"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_right"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/edit_right"/>
        <TextView
                android:text="左折率"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_left"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/edit_left"/>
        <TextView
                android:text="流入量1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_entry1"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/entry1"/>
        <TextView
                android:text="流入量2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_entry2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/entry2"/>
        <TextView
                android:text="流入量3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_entry3"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/entry3"/>
        <TextView
                android:text="流入量4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_entry4"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/entry4"/>
        <Button
                android:text="計算"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>